generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model BarberShop {
  id          String              @id @default(uuid())
  name        String
  address     String
  description String
  imageURL    String
  phone       String[]
  services    BarbershopService[]
}

model BarbershopService {
  id            String     @id @default(uuid())
  name          String
  description   String
  imageURL      String
  barbershopId  String
  babershop     BarberShop @relation(fields: [barbershopId], references: [id])
  princeInCents Int
}

model Booking {
  id          String    @id @default(uuid())
  serviceId   String
  babershopId String
  date        DateTime  @db.Timestamptz
  cancelled   Boolean?  @default(false)
  cancelledAt DateTime? @db.Timestamptz
}
